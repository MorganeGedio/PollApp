{
    "compilerOptions": {
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "isolatedModules": true,
      "jsx": "react",
      "lib": ["es6"],
      "moduleResolution": "node",
      "noEmit": true,
      "strict": true,
      "target": "esnext", 
      "rootDirs": ["./"],
      "baseUrl": "./", 
      "paths": {
        "components/*": ["components/*"],
        "constants/*": ["constants/*"],
        "screens/*": ["screens/*"],
        "services/*": ["services/*"],
        "utils/*": ["utils/*"],
        "App/*": ["App/*"],
    }
    },
    "filesGlob": [
      "./**/*.ts",
      "./**/*.tsx"
    ], 
    "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js"]
  }